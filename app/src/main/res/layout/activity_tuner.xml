<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TunerActivity">

    <!--<include layout="@layout/toolbar" />-->
    <include layout="@layout/navigation" />

    <TextView
        android:id="@+id/textViewLastNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textViewLastNotes"
        app:layout_constraintStart_toEndOf="@+id/textViewNote"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewNote"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/initialNote"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewFreq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLastFreqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lastFreqs"
        app:layout_constraintStart_toEndOf="@+id/textViewFreq"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewFreq"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textDBs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lastFreqs"
        app:layout_constraintStart_toEndOf="@+id/textViewFreq"
        app:layout_constraintBaseline_toBottomOf="@+id/textViewFreq" />

    <TextView
        android:id="@+id/textViewFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initialHz"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>